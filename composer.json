{
    "name": "entropyphp/eventdispacher",
    "description": "Event system manager",
    "type": "library",
    "require": {
        "php": ">=8.1",
        "league/event": "^3.0",
        "php-di/invoker": "^2.2"
    },
    "require-dev": {
        "symfony/var-dumper": "^7.3",
        "phpunit/phpunit": "10.1",
        "squizlabs/php_codesniffer": "^3.13"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Entropy\\Event\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Entropy\\Tests\\Event\\": "tests"
        }
    },
    "scripts": {
        "coverage": ["php -dxdebug.mode=coverage ./vendor/bin/phpunit --coverage-text --coverage-html=build/coverage"]
    },
    "authors": [
        {
            "name": "willy",
            "email": "william.lety@gmail.com"
        }
